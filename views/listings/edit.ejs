<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h1>Edit your listing</h1>
    <form method="POST"action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
    <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
        <div class="valid-feedback">Title looks great</div>
    </div>
    <div class="mb-3">
         <lable for="description" class="form-label">Description</lable>
        <textarea class="form-control" name="listing[description]" required><%= listing.description %></textarea>
    </div>
    <div class="mb-3">
        <lable for="image" class="form-label">Image Link</lable>
        <input name="listing[image][url]" value="<%= listing.image.url %>" type="text" class="form-control" required />

    </div>
    <div class="row">
    <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" value="<%= listing.price %>" type="text" class="form-control" required />
        <div class="invalid-feedback">Enter correct price</div>
    </div>
    <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required />
        <div class="invalid-feedback">Enter valid country</div>
    </div>
    </div>
    <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/>
        <div class="invalid-feedback">Enter a valid location</div>
    </div>

    <button class="btncolr mt-3">Edit</button>

    </form>
    </div>
    </div>
    <script src="/js/script.js"></script>
</body>
